@model IEnumerable<CoffeeShop.Models.Interfaces.Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

    <!DOCTYPE html>

    <html>
    <head>
        <title>Coffe Shop</title>
    </head>
    <body>
    <h1>Coffe Shop</h1>
        @foreach (var item in Model)
    {
        <img height="100" width="100" src="@item.ImageUrl"/>
        <a asp-controller="Products" asp-action="Detail" asp-route-id="@item.Id"> <h3>@item.Name</h3></a>
        <p>@item.Price.ToString("zł")</p>
        
    }
   

    </body>

    </html>